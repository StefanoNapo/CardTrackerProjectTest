<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Name"
        app:autoSizeTextType="uniform"
        app:emojiCompatEnabled="false"
        app:layout_constraintEnd_toStartOf="@+id/CardImageButton"
        app:layout_constraintStart_toEndOf="@+id/cardCheckBox"
        app:textAllCaps="false"
        tools:layout_editor_absoluteY="25dp" />

    <ImageButton
        android:id="@+id/CardImageButton"
        android:layout_width="55dp"
        android:layout_height="56dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteY="10dp" />

    <CheckBox
        android:id="@+id/cardCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp" />

    <Spinner
        android:id="@+id/cardAmountSpinner"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="10dp"
        tools:listitem="1,2,3,4,5,6,7,8,9" />

</androidx.constraintlayout.widget.ConstraintLayout>