<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/cardName"
        android:layout_width="227dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:text="Card Name"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="17sp"
        app:autoSizeTextType="uniform"
        app:emojiCompatEnabled="false"
        android:layout_marginStart="55dp"
        app:layout_constraintEnd_toStartOf="@+id/CardImageButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="false" />

    <ImageButton
        android:id="@+id/CardImageButton"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_marginEnd="72dp"
        android:contentDescription="Card Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/cardCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:width="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CardImageButton"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:background="#5A57AE"
        android:fontFamily="sans-serif-light"
        android:padding="0dp"
        android:text="X"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#393939"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />

</androidx.constraintlayout.widget.ConstraintLayout>