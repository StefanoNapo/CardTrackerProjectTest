<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/cardName"
        android:layout_width="227dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:text="Card Name"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="17sp"
        app:autoSizeTextType="uniform"
        app:emojiCompatEnabled="false"
        app:layout_constraintEnd_toStartOf="@+id/CardImageButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cardCheckBox"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="false" />

    <ImageButton
        android:id="@+id/CardImageButton"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginEnd="64dp"
        android:contentDescription="Card Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/cardCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/quantity"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:width="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CardImageButton"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="number" />

</androidx.constraintlayout.widget.ConstraintLayout>